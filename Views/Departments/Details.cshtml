@if(@Model.Courses.Count == 0)
{
  <p>This student
 does not belong to any categories</p>
}
else
{
  <h4>Courses in this Department:</h4>
  @foreach (var course in Model.Courses)
  {
  <li>@course.Name</li>
  }
  <ul>
